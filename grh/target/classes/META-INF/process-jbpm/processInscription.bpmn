  <itemDefinition id="_candidatItem" structureRef="com.bull.grh.view.metier.vo.CandidatVO" />
  <itemDefinition id="_relanceItem" structureRef="Integer" />
  <itemDefinition id="_mailItem" structureRef="com.bull.grh.view.admin.vo.EmailVO" />

  <process processType="Private" isExecutable="true" id="PROCESS_INSCRIPTION" name="Sample Process" tns:packageName="defaultPackage" >

    <extensionElements>
     <tns:import name="com.bull.grh.domaine.Candidat" />
     <tns:import name="com.bull.grh.domaine.types.EmailCode" />
     <tns:import name="com.bull.grh.view.admin.vo.EmailVO" />
     <tns:import name="java.util.HashMap" />
     <tns:import name="java.util.Map" />
     <tns:global identifier="candidatDao" type="com.bull.grh.repos.metier.CandidatDao" />
     <tns:global identifier="emailService" type="com.bull.grh.service.utils.EmailService" />
    </extensionElements>
    <!-- process variables -->
    <property id="candidat" itemSubjectRef="_candidatItem"/>
    <property id="relance" itemSubjectRef="_relanceItem"/>
    <property id="mail" itemSubjectRef="_mailItem"/>

    <!-- nodes -->
    <startEvent id="_1" name="StartProcess" />
    <task id="_2" name="Email d'activation" tns:taskName="Email" >
      <extensionElements>
        <tns:onEntry-script scriptFormat="http://www.java.com/java">
          <script>kcontext.setVariable("relance", 1);
kcontext.setVariable("mail",emailService.emailToActivateAccount(candidat));
System.out.println("test de variable candidatDao"+candidatDao);
System.out.println("test de variable emailService"+emailService);
System.out.println("test de variable candidat"+candidat);</script>
        </tns:onEntry-script>
      </extensionElements>
      <ioSpecification>
        <dataInput id="_2_mailInput" name="mail" />
        <dataInput id="_2_BodyInput" name="Body" />
        <dataInput id="_2_SubjectInput" name="Subject" />
        <dataInput id="_2_ToInput" name="To" />
        <dataInput id="_2_FromInput" name="From" />
        <inputSet>
          <dataInputRefs>_2_mailInput</dataInputRefs>
          <dataInputRefs>_2_BodyInput</dataInputRefs>
          <dataInputRefs>_2_SubjectInput</dataInputRefs>
          <dataInputRefs>_2_ToInput</dataInputRefs>
          <dataInputRefs>_2_FromInput</dataInputRefs>
        </inputSet>
        <outputSet>
        </outputSet>
      </ioSpecification>
      <dataInputAssociation>
        <sourceRef>mail</sourceRef>
        <targetRef>_2_mailInput</targetRef>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_2_BodyInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.body}</from>
          <to xsi:type="tFormalExpression">_2_BodyInput</to>
        </assignment>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_2_SubjectInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.subject}</from>
          <to xsi:type="tFormalExpression">_2_SubjectInput</to>
        </assignment>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_2_ToInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.to}</from>
          <to xsi:type="tFormalExpression">_2_ToInput</to>
        </assignment>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_2_FromInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.from}</from>
          <to xsi:type="tFormalExpression">_2_FromInput</to>
        </assignment>
      </dataInputAssociation>
    </task>
    <userTask id="_3" name="Validation" >
      <ioSpecification>
        <dataInput id="_3_TaskNameInput" name="TaskName" />
        <inputSet>
          <dataInputRefs>_3_TaskNameInput</dataInputRefs>
        </inputSet>
        <outputSet>
        </outputSet>
      </ioSpecification>
      <dataInputAssociation>
        <targetRef>_3_TaskNameInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">ActivateAccountTask</from>
          <to xsi:type="tFormalExpression">_3_TaskNameInput</to>
        </assignment>
      </dataInputAssociation>
      <potentialOwner>
        <resourceAssignmentExpression>
          <formalExpression>#{candidat.codeActivationCompte}</formalExpression>
        </resourceAssignmentExpression>
      </potentialOwner>
    </userTask>
    <scriptTask id="_5" name="Annulation du compte" scriptFormat="http://www.java.com/java" >
      <script>System.out.println("\n\n");
System.out.println("Appele au service de superssion de compte pour le candidat avec ID: "+candidat.getId());
Candidat c = candidatDao.findOne(candidat.getUsername());
c.setCompteActive(false);
candidatDao.delete(c);</script>
    </scriptTask>
    <endEvent id="_7" name="End" >
        <terminateEventDefinition/>
    </endEvent>
    <scriptTask id="_8" name="Activation du compte" scriptFormat="http://www.java.com/java" >
      <script>System.out.println("\n\n");
System.out.println("Appele au service d'activation de compte pour le candidat avec ID: "+candidat.getId());
Candidat c = candidatDao.findOne(candidat.getUsername());
c.setCompteActive(true);
candidatDao.save(c);
System.out.println("Candidat compte actif ?  " + c.isCompteActive());
System.out.println("\n\n");</script>
    </scriptTask>
    <parallelGateway id="_9" name="Gateway" gatewayDirection="Diverging" />
    <task id="_10" name="Email de confirmation" tns:taskName="Email" >
      <extensionElements>
        <tns:onEntry-script scriptFormat="http://www.java.com/java">
          <script>kcontext.setVariable("mail",emailService.emailAccountActivated(candidat));</script>
        </tns:onEntry-script>
      </extensionElements>
      <ioSpecification>
        <dataInput id="_10_mailInput" name="mail" />
        <dataInput id="_10_BodyInput" name="Body" />
        <dataInput id="_10_SubjectInput" name="Subject" />
        <dataInput id="_10_ToInput" name="To" />
        <dataInput id="_10_FromInput" name="From" />
