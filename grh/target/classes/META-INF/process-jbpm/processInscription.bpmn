          <dataInputRefs>_10_mailInput</dataInputRefs>
          <dataInputRefs>_10_BodyInput</dataInputRefs>
          <dataInputRefs>_10_SubjectInput</dataInputRefs>
          <dataInputRefs>_10_ToInput</dataInputRefs>
          <dataInputRefs>_10_FromInput</dataInputRefs>
        </inputSet>
        <outputSet>
        </outputSet>
      </ioSpecification>
      <dataInputAssociation>
        <sourceRef>mail</sourceRef>
        <targetRef>_10_mailInput</targetRef>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_10_BodyInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.body}</from>
          <to xsi:type="tFormalExpression">_10_BodyInput</to>
        </assignment>
      </dataInputAssociation>
      <dataInputAssociation>
