          <to xsi:type="tFormalExpression">_10_ToInput</to>
        </assignment>
      </dataInputAssociation>
      <dataInputAssociation>
        <targetRef>_10_FromInput</targetRef>
        <assignment>
          <from xsi:type="tFormalExpression">#{mail.from}</from>
          <to xsi:type="tFormalExpression">_10_FromInput</to>
        </assignment>
      </dataInputAssociation>
    </task>
    <task id="_12" name="Email de relance" tns:taskName="Email" >
      <extensionElements>
        <tns:onEntry-script scriptFormat="http://www.java.com/java">
          <script>kcontext.setVariable("mail",emailService.emailReActivate(candidat));</script>
        </tns:onEntry-script>
        <tns:onExit-script scriptFormat="http://www.java.com/java">
          <script>relance = relance + 1;
kcontext.setVariable("relance", relance);
System.out.println("L'email de relance N : " + relance + "pour le Candidat avec ID :" + candidat.getId());</script>
        </tns:onExit-script>
      </extensionElements>
