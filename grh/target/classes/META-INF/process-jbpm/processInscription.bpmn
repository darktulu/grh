    <sequenceFlow id="_9-_3" sourceRef="_9" targetRef="_3" />
    <sequenceFlow id="_13-_5" sourceRef="_13" targetRef="_5" name="relance &gt; 3" tns:priority="1" >
      <conditionExpression xsi:type="tFormalExpression" language="http://www.java.com/java" >return (relance &lt;= 3) == false;</conditionExpression>
